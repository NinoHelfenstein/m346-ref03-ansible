- name: Start Ref03 Java Application
  systemd:
    name: ref03
    enabled: yes
    state: started
    daemon_reload: yes
    scope: user
    user: nino
    description: "Ref03 Java Application"
    service: |
      [Unit]
      Description=Ref03 Java Application
      After=syslog.target

      [Service]
      User=nino
      ExecStart=/usr/bin/java -DDB_USERNAME='jokedbuser' -DDB_PASSWORD='123456' -DDB_URL="jdbc:mariadb://192.168.68.248:3306/jokedb" -jar /ref03/target/architecture-refcard-03-0.0.1-SNAPSHOT.jar
      SuccessExitStatus=143
      Restart=always
      StandardOutput=syslog
      StandardError=syslog
      SyslogIdentifier=ref03

      [Install]
      WantedBy=multi-user.target
